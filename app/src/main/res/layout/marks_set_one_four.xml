<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="2dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- První skupina karet -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="@color/mark_1"
                    app:cardCornerRadius="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="12dp"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/black"
                        android:textSize="24sp" />
                </androidx.cardview.widget.CardView>

                <!-- První TextInputLayout -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:layout_gravity="center_horizontal|top">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/markOneProcentage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:digits="0123456789"
                        android:gravity="center"
                        android:hint="100%"
                        android:inputType="numberDecimal"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Dolní část s procenty -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="@color/mark_1"
                    app:cardCornerRadius="20dp">

                    <TextView
                        android:id="@+id/markOneBottomProcentage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:text="91%"
                        android:textColor="@color/black"
                        android:textSize="24sp" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- První skupina karet -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/mark_2"
                    app:cardCornerRadius="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="12dp"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="@color/black"
                        android:textSize="24sp" />
                </androidx.cardview.widget.CardView>

                <!-- První TextInputLayout -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal|top">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/markTwoProcentage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:digits="0123456789"
                        android:gravity="center"
                        android:hint="90%"
                        android:inputType="numberDecimal"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Dolní část s procenty -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="@color/mark_2"
                    app:cardCornerRadius="20dp">

                    <TextView
                        android:id="@+id/markTwoBottomProcentage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:text="81%"
                        android:textColor="@color/black"
                        android:textSize="24sp" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- První skupina karet -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="@color/mark_3"
                    app:cardCornerRadius="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="12dp"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="@color/black"
                        android:textSize="24sp" />
                </androidx.cardview.widget.CardView>

                <!-- První TextInputLayout -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:layout_gravity="center_horizontal|top">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/markThreeProcentage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:digits="0123456789"
                        android:gravity="center"
                        android:hint="80%"
                        android:inputType="numberDecimal"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Dolní část s procenty -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="@color/mark_3"
                    app:cardCornerRadius="20dp">

                    <TextView
                        android:id="@+id/markThreeBottomProcentage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:text="71%"
                        android:textColor="@color/black"
                        android:textSize="24sp" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- První skupina karet -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="@color/mark_4"
                    app:cardCornerRadius="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="12dp"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:text="4"
                        android:textColor="@color/black"
                        android:textSize="24sp" />
                </androidx.cardview.widget.CardView>

                <!-- První TextInputLayout -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:layout_gravity="center_horizontal|top">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/markFourProcentage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:digits="0123456789"
                        android:gravity="center"
                        android:hint="70%"
                        android:inputType="numberDecimal"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Dolní část s procenty -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/mark_4"
                    app:cardCornerRadius="20dp">

                    <TextView
                        android:id="@+id/markFourBottomProcentage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:text="61%"
                        android:textColor="@color/black"
                        android:textSize="24sp" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
